<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="@string/tune_reader"
            android:textSize="16sp"
            app:fontFamily="@font/hind_bold" />

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/fontTabs"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:tabGravity="fill"
            app:tabIndicator="@drawable/custom_tab_indicator"
            app:tabMinWidth="80dp"
            app:tabMode="scrollable"
            app:tabTextAppearance="@style/TabTextAppearance"
            app:tabUnboundedRipple="true" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.5"
            android:background="@color/colorTextPrimary" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSmall"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_round_format_size_24" />

        <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/fontSizeSeek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/ivLarge"
                android:layout_toEndOf="@id/ivSmall"
                android:max="20"
                android:min="12" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLarge"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_round_format_size_24" />
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.5"
            android:background="@color/colorTextPrimary" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

        <com.marxist.android.utils.views.CheckableFrameLayout
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@drawable/round_ring">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_round_white" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/arima_madurai" />
        </com.marxist.android.utils.views.CheckableFrameLayout>

        <com.marxist.android.utils.views.CheckableFrameLayout
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@drawable/round_ring">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_round_black" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/arima_madurai" />
        </com.marxist.android.utils.views.CheckableFrameLayout>

        <com.marxist.android.utils.views.CheckableFrameLayout
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:background="@drawable/round_ring">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_round_tradition" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/arima_madurai" />
        </com.marxist.android.utils.views.CheckableFrameLayout>
    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

</LinearLayout>