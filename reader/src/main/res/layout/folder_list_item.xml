<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="8dp">
    <ImageView
            android:id="@+id/folder_list_item_remove"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_delete" tools:ignore="ContentDescription"/>
    <TextView
            android:id="@+id/folder_list_item_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:layout_toStartOf="@id/folder_list_item_remove"
            android:textSize="16sp" tools:ignore="RtlSymmetry"/>
</RelativeLayout>
